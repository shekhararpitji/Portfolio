    "miniflare": "^3.20250408.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.5.2",
    "react-router-dom": "^7.5.2",
    "rehype-img-size": "^1.0.1",
    "rehype-slug": "^6.0.0",
    "three": "^0.161.0",
    "three-stdlib": "^2.35.16"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^2.1.1",
